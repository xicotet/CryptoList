<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.SearchFragment">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="10dp"
        android:background="@color/logo_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"

        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/logo_color"
            android:contentDescription="@string/volver_atras"
            android:src="@drawable/baseline_arrow_back_24"
            tools:ignore="TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="24dp" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:iconifiedByDefault="false"
            android:closeIcon="@drawable/close"
            android:background="@drawable/searchview_background"
            android:queryHint="Moneda"
            />
    </com.google.android.material.appbar.MaterialToolbar>

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTrending"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:checkable="true"
                android:text="@string/chip_trending"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                app:chipCornerRadius="5dp"
                app:chipEndPadding="18dp"
                app:chipIcon="@drawable/trending"
                app:chipIconSize="30dp"
                app:chipStartPadding="18dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGainer"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:checkable="true"
                android:text="@string/gainer"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                app:chipCornerRadius="5dp"
                app:chipEndPadding="18dp"
                app:chipIcon="@drawable/increase"
                app:chipIconSize="30dp"
                app:chipStartPadding="18dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLoser"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginEnd="16dp"
                android:checkable="true"
                android:text="@string/loser"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                app:chipCornerRadius="5dp"
                app:chipEndPadding="18dp"
                app:chipIcon="@drawable/decrease"
                app:chipIconSize="30dp"
                app:chipStartPadding="18dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScroll" />




</androidx.constraintlayout.widget.ConstraintLayout>