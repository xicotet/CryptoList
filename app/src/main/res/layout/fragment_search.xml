<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.SearchFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="10dp"
        android:background="@color/logo_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"

        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="@color/logo_color"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/volver_atras"
            android:src="@drawable/baseline_arrow_back_24"/>

        <SearchView
            android:id="@+id/search_coin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:iconifiedByDefault="false"
            android:closeIcon="@drawable/close"
            android:background="@drawable/searchview_background"
            android:queryHint="Moneda"
            />
    </com.google.android.material.appbar.MaterialToolbar>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_trending"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:checkable="true"
                android:text="@string/chip_trending"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:chipBackgroundColor="@color/logo_secondary_color"
                app:chipCornerRadius="5dp"
                app:chipEndPadding="14dp"
                app:chipIcon="@drawable/trending"
                app:chipStartPadding="14dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_gainer"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:checkable="true"
                android:text="Gainer"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:chipBackgroundColor="@color/logo_secondary_color"
                app:chipCornerRadius="5dp"
                app:chipEndPadding="14dp"
                app:chipIcon="@drawable/increase"
                app:chipStartPadding="14dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_loser"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:checkable="true"
                android:text="Loser"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:chipBackgroundColor="@color/logo_secondary_color"
                app:chipCornerRadius="5dp"
                app:chipEndPadding="14dp"
                app:chipIcon="@drawable/decrease"
                app:chipStartPadding="14dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>